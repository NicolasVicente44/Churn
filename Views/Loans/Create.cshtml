@model Churn.Models.Loan

@{
    ViewData["Title"] = "Create a Loan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h1 class="row justify-content-center">@ViewData["Title"]</h1>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InterestRate" class="control-label"></label>
                <input asp-for="InterestRate" class="form-control" />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanAmount" class="control-label"></label>
                <input asp-for="LoanAmount" class="form-control" />
                <span asp-validation-for="LoanAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanTermMonths" class="control-label"></label>
                <input asp-for="LoanTermMonths" class="form-control" />
                <span asp-validation-for="LoanTermMonths" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Collateral" class="control-label"></label>
                <input asp-for="Collateral" class="form-control" />
                <span asp-validation-for="Collateral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="login-submit" type="submit" class="btn btn-lg" style="display: flex; margin: 1em auto;">Create</button>
            </div>
        </form>
        <div>
            <a class="row justify-content-center" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
