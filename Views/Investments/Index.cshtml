@model IEnumerable<Churn.Models.Investment>

@{
    ViewData["Title"] = "List of Investments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark" style="height: 40%; width: 100%;">
    <div class="col-md-10 px-0">
        <h1 class="display-4 fst-italic">
            <img src="~/Images/investment.png" height="100px" />  Maximize Your Wealth
        </h1>
        <p class="lead my-3">Discover lucrative investment opportunities that can help you grow your wealth. Whether you're a beginner or an experienced investor, we can help you on your investing journey.</p>
    </div>
</div>

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="accountTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvestmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumInvestmentAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedReturnRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvestmentTerm)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvestmentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinimumInvestmentAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpectedReturnRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvestmentTerm)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#accountTable').DataTable({
                "paging": true,
                "pageLength": 10,
                "ordering": true,
                "order": [],
                "searching": true,
                "language": {
                    "searchPlaceholder": "Search investments..."
                },
            });
        });
    </script>
}