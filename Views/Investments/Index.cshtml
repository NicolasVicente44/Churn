@model IEnumerable<Churn.Models.Investment>

@{
    ViewData["Title"] = "List of Investments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvestmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumInvestmentAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedReturnRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvestmentTerm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvestmentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumInvestmentAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedReturnRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvestmentTerm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
