@model Churn.Models.Investment

@{
    ViewData["Title"] = "Delete an Investment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="card mt-4 mx-auto" style="max-width: 400px;">
    <div class="card-body">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Investment Type</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.InvestmentType)</dd>

            <dt class="col-sm-4">Minimum Investment Amount</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MinimumInvestmentAmount)</dd>

            <dt class="col-sm-4">Expected Return Rate</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ExpectedReturnRate)</dd>

            <dt class="col-sm-4">Investment Term</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.InvestmentTerm)</dd>

            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4 text-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" id="login-submit" class="btn">Back to List</a>
        </form>
    </div>
</div>
