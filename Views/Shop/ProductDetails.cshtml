@model Churn.Models.Product

@{
    ViewData["Title"] = Model.Name + " Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .product-detail-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 20px;
    }

    .product-photo img {
        max-height: 470px;
        width: 470px;
        border-radius: 5px;
    }

    .product-info {
        margin-left: 20px;
    }
    </style>
<h1 class="text-center">@ViewData["Title"]</h1>

<div class="product-detail-container">
    <div class="product-photo">
        <img src="~/images/products/@Model.Photo" alt="@Model.Name" />
    </div>
    <div class="product-info">
        <hr />
        <dl>
            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>

            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>

            <dt>@Html.DisplayNameFor(model => model.InterestRate)</dt>
            <dd>@Html.DisplayFor(model => model.InterestRate)</dd>

            <dt>@Html.DisplayNameFor(model => model.TermLength)</dt>
            <dd>@Html.DisplayFor(model => model.TermLength)</dd>

            <dt>@Html.DisplayNameFor(model => model.Limit)</dt>
            <dd>@Html.DisplayFor(model => model.Limit)</dd>

            <dt>@Html.DisplayNameFor(model => model.AnnualFee)</dt>
            <dd>@Html.DisplayFor(model => model.AnnualFee)</dd>

            <dt>@Html.DisplayNameFor(model => model.Category)</dt>
            <dd>@Html.DisplayFor(model => model.Category.Name)</dd>
        </dl>

        <div class="text-center">
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-action="AddToCart">

                    <input type="hidden" name="productId" value="@Model.Id">

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Quantity</span>
                        </div>

                        <input class="form-control" type="number" name="quantity" min="1" step="1" value="1">
                        <div class="input-group-append">

                            <input type="submit" value="Add to Cart" class="btn btn-outline-secondary">
                        </div>
                    </div>


                </form>
            }            <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
        </div>

    </div>
</div>

<div>
</div>
