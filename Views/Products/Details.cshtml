@model Churn.Models.Product

@{
    ViewData["Title"] = Model.Name + " Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container-center {
        max-width: 75%;
        margin: 0 auto;
    }

    /* Add spacing to the form */
    .form-group {
        margin-bottom: 1.5rem;
    }
</style>

<div class="container container-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center">@ViewData["Title"]</h1>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.InterestRate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.InterestRate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TermLength)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TermLength)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Photo)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Photo)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Limit)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Limit)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.AnnualFees)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AnnualFees)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.AnnualFee)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AnnualFee)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category.Name)
                    </dd>
                </dl>
            </div>
            <div class="text-center">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>