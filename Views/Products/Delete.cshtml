@model Churn.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container-center {
        max-width: 75%;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 1.5rem;

    }

    .product-image {
        height: 250px;
        width: 250px;
        object-fit: cover;
    }

</style>

<div class="container container-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center">Delete</h1>

            <h3 class="text-center">Are you sure you want to delete @Model.Name?</h3>
            <div>
                <hr />
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <img class="img-fluid img-thumbnail product-image" src="~/images/products/@Model.Photo">
                    </div>
                </div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.InterestRate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.InterestRate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TermLength)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TermLength)
                    </dd>
                  
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Limit)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Limit)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.AnnualFees)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AnnualFees)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.AnnualFee)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AnnualFee)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category.Name)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group text-center" style="margin-top: 1em;">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>