@model Churn.Models.Mortgage

@{
    ViewData["Title"] = "Delete a Mortgage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="delete-container" class="container">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="card mt-4 mx-auto" style="max-width: 400px;">
        <div class="card-body">
            <h3 class="text-center">Are you sure you want to delete this?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Interest Rate</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.InterestRate)</dd>

                <dt class="col-sm-4">Mortgage Amount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MortgageAmount)</dd>

                <dt class="col-sm-4">Mortgage Term (Years)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MortgageTermYears)</dd>

                <dt class="col-sm-4">Down Payment</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DownPayment)</dd>

                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4 text-center">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" id="login-submit" class="btn">Back to List</a>
            </form>
        </div>
    </div>
</div>
