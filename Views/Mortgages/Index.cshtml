@model IEnumerable<Churn.Models.Mortgage>

@{
    ViewData["Title"] = "List of Mortgages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark" style="height: 40%; width: 100%;">
    <div class="col-md-11 px-0">
        <h1 class="display-4 fst-italic">
            <img src="~/Images/mortgage.png" height="100px" />
            Perfect Mortgage, Perfect Home
        </h1>
        <p class="lead my-3">Explore our mortgage options to make your dream of owning a home a reality. We offer competitive interest rates, flexible repayment terms, and personalized solutions.</p>
    </div>
</div>

<h1>@ViewData["Title"]</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="accountTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterestRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MortgageAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MortgageTermYears)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DownPayment)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InterestRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MortgageAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MortgageTermYears)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DownPayment)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#accountTable').DataTable({
                "paging": true,
                "pageLength": 10,
                "ordering": true,
                "order": [],
                "searching": true,
                "language": {
                    "searchPlaceholder": "Search mortgages..."
                },
            });
        });
    </script>
}