@model IEnumerable<Churn.Models.CreditCard>

@{
    ViewData["Title"] = "Credit Cards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="crud-banner" class="p-4 p-md-5 mb-4 text-white rounded" style="height: 40%; width: 100%;">
    <div class="col-md-10 px-0">
        <h1 class="display-4 fst-italic">
            <img src="~/Images/credit-card.png" height="100px" />  Reward Yourself
        </h1>
        <p class="lead my-3">Discover the perfect credit card tailored to your needs, offering exclusive rewards, competitive interest rates, and unparalleled financial flexibility.</p>
    </div>
</div>

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="accountTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterestRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumPaymentAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnualFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BalanceTransferAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InterestRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinimumPaymentAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnnualFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BalanceTransferAmount)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#accountTable').DataTable({
                "paging": true,
                "pageLength": 10,
                "ordering": true,
                "order": [],
                "searching": true,
                "language": {
                    "searchPlaceholder": "Search credit cards..."
                },
            });
        });
    </script>
}

