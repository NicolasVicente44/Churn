@model Churn.Models.Account

@{
    ViewData["Title"] = "Delete an Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="card mt-4 mx-auto" style="max-width: 400px;">
    <div class="card-body">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
        <hr />
        <div>
            <h4 class="mb-3">Account</h4>
            <dl class="row">
                <dt class="col-sm-4">Account Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AccountType)</dd>

                <dt class="col-sm-4">Minimum Balance</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MinimumBalance)</dd>

                <dt class="col-sm-4">Interest Rate</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.InterestRate)</dd>

                <dt class="col-sm-4">Maximum Withdrawal Limit</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MaximumWithdrawalLimit)</dd>

                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
        </div>

        <form asp-action="Delete" class="mt-4 text-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" id="login-submit" class="btn">Back to List</a>
        </form>
    </div>
</div>
